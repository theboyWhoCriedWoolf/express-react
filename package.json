{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "description": "A scalable React boilerplate comprised of create-react-app and Express",
  "repository": "git@github.com:theboyWhoCriedWoolf/react-express-boilerplate.git",
  "author": "Tal Woolf",
  "license": "MIT",
  "engines": {
    "npm": ">=5",
    "node": ">=8"
  },
  "scripts": {
    "commit": "npx git-cz",
    "presetup": "yarn add chalk",
    "setup": "node ./internals/scripts/setup.js",
    "start": "npm-run-all --parallel start:server start:client",
    "start:client": "cross-env PORT=7331 cross-env SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "start:server": "cross-env NODE_ENV=development nodemon",
    "start:production": "npm-run-all test build start:prod",
    "start:prod": "pm2 start internals/pm2/production.config.js",
    "build": "npm-run-all build:server build:client",
    "build:client": "cross-env NODE_ENV=production cross-env SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "build:server": "cross-env NODE_ENV=production tsc",
    "lint:staged": "lint-staged",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --ignore-pattern internals/ --fix",
    "lint:tslint:fix": "tslint -p ./server -c tslint.json --fix",
    "lint:eslint": "cross-env NODE_ENV=production eslint --ignore-path .gitignore --ignore-pattern internals/",
    "lint:js": "npm run lint:eslint -- ./src ",
    "lint:ts": "tslint -p . -c tslint.json",
    "lint": "npm-run-all lint:js lint:css lint:ts",
    "lint:css": "stylelint './src/**/*.{css,js}'",
    "test:clean": "rimraf ./coverage",
    "pretest": "npm run test:clean && npm run lint",
    "test": "cross-env NODE_ENV=test flow && cross-env SKIP_PREFLIGHT_CHECK=true react-scripts test --env=jsdom --coverage",
    "test:watch": "cross-env NODE_ENV=test react-scripts test",
    "ts:watch": "tsc --watch",
    "test:server": "cross-env NODE_ENV=test jest --config=internals/testing/server.config.js",
    "flow:watch": "flow-watch",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "generate": "plop --plopfile internals/generators/index.js",
    "prettify": "prettier --write"
  },
  "proxy": "http://localhost:3000",
  "lint-staged": {
    "*.ts": [
      "npm run lint:tslint:fix",
      "git add --force"
    ],
    "*.js": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "babel": {
    "plugins": [
      "@babel/plugin-transform-flow-strip-types",
      "@babel/plugin-syntax-dynamic-import",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-flow"
    ],
    "env": {
      "production": {
        "only": [
          "src",
          "server",
          "config"
        ],
        "plugins": [
          "transform-react-remove-prop-types",
          "@babel/plugin-transform-react-inline-elements",
          "@babel/plugin-transform-react-constant-elements"
        ]
      },
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs",
          "dynamic-import-node"
        ]
      }
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/*/RbGenerated*/*.{js,jsx}",
      "!src/index.js",
      "!src/global-styles.js",
      "!src/serviceWorker.js",
      "!src/*/*/Loadable.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 98,
        "branches": 91,
        "functions": 98,
        "lines": 98
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/plugin-transform-react-inline-elements": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@types/compression": "^0.0.36",
    "@types/cookie-session": "^2.0.36",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.42",
    "@types/hpp": "^0.2.1",
    "@types/http-errors": "^1.6.1",
    "@types/http-proxy-middleware": "^0.17.6",
    "@types/ip": "^0.0.31",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.1",
    "@types/uuid": "^3.4.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.19",
    "cross-env": "^5.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.83.0",
    "flow-typed": "^2.5.1",
    "flow-watch": "^1.1.3",
    "http-proxy-middleware": "^0.19.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "react-hot-loader": "^4.3.11",
    "react-scripts": "^2.0.5",
    "regenerator-runtime": "^0.12.1",
    "stylelint": "^9.6.0",
    "stylelint-config-recommended": "^2.1.0",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-security": "^1.12.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.5"
  },
  "optionalDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.7.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "dotenv-expand": "^4.2.0",
    "eslint-plugin-flowtype": "^3.0.0",
    "express": "^4.16.4",
    "express-async-handler": "^1.1.4",
    "fontfaceobserver": "^2.0.13",
    "helmet": "^3.14.0",
    "hpp": "^0.2.2",
    "http-errors": "^1.7.1",
    "ip": "^1.1.5",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.5",
    "pm2": "^3.2.2",
    "pretty-error": "^2.1.1",
    "react-helmet": "^5.2.0",
    "sanitize.css": "^8.0.0",
    "shelljs": "^0.8.2",
    "ts-node": "^7.0.1",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  }
}
